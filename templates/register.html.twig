{% extends "base.html.twig" %}

{% block title %}Inscription - EventPro{% endblock %}

{% block body %}
<body class="bg-gray-100">
    

    <main class="container mx-auto px-6 py-8">
        <div class="max-w-md mx-auto bg-white rounded shadow p-6">
            <h1 class="text-2xl font-bold mb-6 text-center">Inscription</h1>
            <form method="post" action="../index.php">
                <div class="mb-4">
                    <label for="name" class="block text-gray-700 mb-2">Nom complet</label>
                    <input type="text" id="name" name="name" class="w-full p-2 border rounded" required>
                </div>
                <div class="mb-4">
                    <label for="email" class="block text-gray-700 mb-2">Adresse e-mail</label>
                    <input type="email" id="email" name="email" class="w-full p-2 border rounded" required>
                </div>
                <div class="mb-6">
                    <label for="password" class="block text-gray-700 mb-2">Mot de passe</label>
                    <input type="password" id="password" name="password" class="w-full p-2 border rounded" required>
                </div>
                <button type="submit" class="w-full bg-orange-500 text-white px-4 py-2 rounded hover:bg-orange-600 mb-4">S'inscrire</button>
            </form>
            <p class="mt-4 text-center">
                Déjà un compte ? <a href="/login"  name='login' class="text-orange-500 hover:underline">Se connecter</a>
            </p>
        </div>
    </main>

   
</body>
{% endblock %}
