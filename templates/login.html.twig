{% extends "base.html.twig" %}

{% block title %}Connexion - EventPro{% endblock %}

{% block body %}
<body class="bg-gray-100">
    <header class="bg-white shadow">
   

    <main class="container mx-auto px-6 py-8">
        <div class="max-w-md mx-auto bg-white rounded shadow p-6">
            <h1 class="text-2xl font-bold mb-6 text-center">Connexion</h1>
            <form method="post" action="../index.php">
                <div class="mb-4">
                    <label for="email" class="block text-gray-700 mb-2">Adresse e-mail</label>
                    <input type="email" id="email" name="_username" class="w-full p-2 border rounded" required>
                </div>
                <div class="mb-6">
                    <label for="password" class="block text-gray-700 mb-2">Mot de passe</label>
                    <input type="password" id="password" name="_password" class="w-full p-2 border rounded" required>
                </div>
                <button type="submit" class="w-full bg-orange-500 text-white px-4 py-2 rounded hover:bg-orange-600">Se connecter</button>
            </form>
            <p class="mt-4 text-center">
                Pas encore de compte ? <a href="/register"  class="text-orange-500 hover:underline">S'inscrire</a>
            </p>
        </div>
    </main>
</body>
{% endblock %}